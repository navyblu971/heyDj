<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="210dp" android:id="@+id/textView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextBarId" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:src="@tools:sample/backgrounds/scenic"
                tools:layout_editor_absoluteY="50dp" tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Bar Identification"
                android:ems="10"
                android:id="@+id/editTextBarId" android:layout_marginEnd="56dp"
                app:layout_constraintEnd_toEndOf="parent" tools:layout_editor_absoluteY="82dp"/>
        <Button
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buttonSaveId"
                tools:layout_editor_absoluteY="675dp"
                tools:layout_editor_absoluteX="317dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>